---
import L from "../../i18n/i18n-node";
import { locales } from "../../i18n/i18n-util"
import type { Locales } from "../../i18n/i18n-types"

export const getStaticPaths = () => locales.map(locale => ({ params: { lang: locale } }));

const { lang } = Astro.params as { lang: Locales };
const LL = L[lang];

const title = "Manuel Quarneti";
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content={LL.DESCRIPTION()}>
    <title>{title}</title>
  </head>
  <body class="flex flex-col justify-between h-screen items-center text-xl dark:bg-gray-900">
    <nav class="flex justify-left w-full">
      <ul class="p-8 flex gap-4">
        {locales.map(locale =>
          locale === lang ?
          <li><span class="bg-blue-200 dark:text-gray-700 p-2" set:html={L[locale].NAME()}></span></li> :
          <li><a class="p-2" href={`/${locale}`} set:html={L[locale].NAME()}></a></li>
        )}
      </ul>
    </nav>
    <main class="flex flex-col gap-8 lg:w-[50vw]">
      <article class="border-2 border-dashed border-gray-300 p-12">
        <h1 set:html={LL.HI()}></h1>
        <div class="flex flex-wrap gap-x-4 gap-y-2">
          <a href="https://github.com/mq1">🐙 GitHub</a> •
          <a href="https://linkedin.com/in/mq1">💼 LinkedIn</a> •
          <a href="mailto:manuelquarneti@gmail.com">📧 Email</a> •
          <a href={`https://mq1.github.io/mq1/${lang}.pdf`} set:html={LL.DOWNLOAD_CV()}></a>
        </div>
      </article>
      <article class="border-2 border-dashed border-gray-300 p-12">
        <h2 set:html={LL.PROJECTS()}></h2>
        <ul class="leading-loose">
          <li><a href="https://github.com/mq1/top-for-spotify">🎧 Top for Spotify</a></li>
          <li><a href="https://github.com/mq1/ice-launcher">🧊 Ice Launcher</a></li>
        </ul>
      </article>
    </main>
    <footer class="flex justify-start w-full p-8">
      <small>MIT Licensed • © 2021-2022 Manuel Quarneti • <a href="https://github.com/mq1/mq1.eu" set:html={LL.SOURCE_CODE()}></a></small>
    </footer>
  </body>
</html>

<style>
:root {
  @apply text-gray-700 dark:text-gray-200;
}

h1 {
  @apply text-5xl font-semibold;
}

h2 {
  @apply text-3xl font-semibold;
}

a {
  @apply underline underline-offset-4 decoration-2 decoration-wavy decoration-blue-300;
}

article {
  @apply dark:bg-gray-800 flex flex-col gap-8;
}
</style>
