---
import translations, { locales } from "../../translations";
import Translation from "../../translations/en";

export const getStaticPaths = () => locales.map(locale => ({ params: { lang: locale } }));

const { lang } = Astro.request.params;
const t = translations[lang] as typeof Translation;

const title = "Manuel Quarneti";
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content={t.description}>
    <title>{title}</title>
  </head>
  <body class="flex flex-col justify-between h-screen items-center text-xl bg-gray-100 dark:bg-black dark:text-white">
    <nav class="flex justify-left w-full">
      <ul class="p-8 flex gap-4">
        {locales.map(locale => locale === lang ? <li><span class="bg-blue-200 dark:text-black p-2" set:html={translations[locale].name}></span></li> : <li><a class="p-2" href={`/${locale}`} set:html={translations[locale].name}></a></li>)}
      </ul>
    </nav>
    <main class="flex flex-col gap-8 lg:w-[50vw]">
      <article class="border-2 border-dashed border-gray-300 p-12">
        <h1 set:html={t.hi}></h1>
        <div class="flex flex-wrap gap-x-4 gap-y-2">
          <a href="https://github.com/mq1">🐙 GitHub</a>
          <a href="https://linkedin.com/in/mq1">💼 LinkedIn</a>
          <a href="mailto:manuelquarneti@gmail.com">📧 Email</a>
          <a href={`https://mq1.github.io/mq1/${lang}.pdf`} set:html={t.download_cv}></a>
        </div>
      </article>
      <article class="border-2 border-dashed border-gray-300 p-12">
        <h2 set:html={t.projects}></h2>
        <ul class="leading-loose">
          <li><a href="https://github.com/mq1/top-for-spotify">🎧 Top for Spotify</a></li>
          <li><a href="https://github.com/mq1/runmc">🚧 runmc (WIP)</a></li>
        </ul>
      </article>
    </main>
    <footer class="flex justify-start w-full p-8">
      <small>MIT Licensed • © 2021-2022 Manuel Quarneti • <a href="https://github.com/mq1/mq1.eu" set:html={t.source_code}></a></small>
    </footer>
  </body>
</html>

<style>
h1 {
  @apply text-5xl font-semibold;
}

h2 {
  @apply text-3xl font-semibold;
}

a {
  @apply underline underline-offset-4 decoration-2 decoration-wavy decoration-blue-300;
}

article {
  @apply bg-white dark:bg-gray-900 flex flex-col gap-8;
}
</style>
