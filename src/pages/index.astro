---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

import { Image } from "@astrojs/image/components";
import me from "../assets/IMG_4766.jpeg";
---

<Layout title="Manuel Quarneti">
	<main class="flex flex-col items-center justify-center gap-y-4 pt-32 sm:pt-0">
		<Image
			src={me}
			height={256}
			width={256}
			format="webp"
			quality={95}
			class="rounded-full h-48 w-48 object-cover"
			alt="Manuel Quarneti"
		/>
		<h1 class="text-5xl w-full text-center dark:text-white">
			Hi, I'm <span class="font-bold">Manuel Quarneti</span>
		</h1>
		<ul role="list" class="w-full max-w-xl">
			<Card
				href="https://github.com/mq1"
				title="👨🏻‍💻 GitHub"
				body="I got some projects on GitHub, check them out!"
			/>
			<Card
				href="https://www.linkedin.com/in/mq1/"
				title="💼 LinkedIn"
				body="I'm on LinkedIn, connect with me!"
			/>
			<Card
				href="mailto:hi@mq1.eu"
				title="✉️ hi@mq1.eu"
				body="Send me an email!"
			/>
			<Card
				href="https://github.com/mq1/awesome-green-software"
				title="🌳 Awesome Green Software"
				body="Check out my list of awesome eco-friendly software!"
			/>
		</ul>
	</main>
</Layout>
