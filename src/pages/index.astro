---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

import { Image } from "@astrojs/image/components";
import me from "../assets/IMG_4766.jpeg";
---

<Layout title="Manuel Quarneti">
	<main class="flex flex-col items-center justify-center gap-y-4">
		<Image
			src={me}
			height={256}
			width={256}
			format="webp"
			quality={100}
			class="rounded-full h-48 w-48 object-cover"
		/>
		<h1 class="text-5xl">Hi, I'm <strong>Manuel Quarneti</strong></h1>
		<ul role="list" class="w-full">
			<Card
				href="https://github.com/mq1"
				title="👨🏻‍💻 GitHub"
				body="I got some projects on GitHub, check them out!"
			/>
			<Card
				href="https://www.linkedin.com/in/mq1/"
				title="💼 LinkedIn"
				body="I'm on LinkedIn, connect with me!"
			/>
			<Card
				href="mailto:hi@mq1.eu"
				title="✉️ hi@mq1.eu"
				body="Send me an email!"
			/>
			<Card
				href="/cv-en"
				title="🇬🇧 CV"
				body="Check out my CV! (English)"
			/>
			<Card
				href="/cv-it"
				title="🇮🇹 CV"
				body="Check out my CV! (Italian)"
			/>
		</ul>
	</main>
</Layout>
