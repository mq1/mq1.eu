---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

import { Image } from '@astrojs/image/components';
import me from '../assets/IMG_4766.jpeg';
---

<Layout title="Manuel Quarneti">
	<div class="flex flex-col h-full items-center justify-between dark:text-white">
		<div />
		<main class="flex flex-col items-center justify-center">
			<Image src={me} height={256} width={256} format="webp" quality={100} class="rounded-full h-48 w-48 object-cover" />
			<h1 class="text-5xl m-4">Hi, I'm <strong>Manuel Quarneti</strong></h1>
			<ul role="list" class="">
				<Card
					href="https://github.com/mq1"
					title="👨🏻‍💻 GitHub"
					body="I got some projects on GitHub, check them out!"
				/>
				<Card
					href="https://www.linkedin.com/in/mq1/"
					title="💼 LinkedIn"
					body="I'm on LinkedIn, connect with me!"
				/>
				<Card
					href="mailto:hi@mq1.eu"
					title="✉️ hi@mq1.eu"
					body="Send me an email!"
				/>
				<Card
					href="https://mq1.github.io/mq1/en.pdf"
					title="🗒 CV"
					body="Download my CV!"
				/>
			</ul>
		</main>
	
		<footer class="m-4 flex gap-x-2">
			<p>MIT Licensed</p> |
			<p>Copyright &copy; 2021-present Manuel Quarneti</p> |
			<a href="https://github.com/mq1/mq1.eu" class="underline hover:text-violet-600 transition transform-gpu ease-in-out">Source code</a>
		</footer>
	</div>
</Layout>
